	background-image:url(images/bg_img_2.png);
	background-repeat:no-repeat; 			/*背景画像の繰り返し*/
}
#menu li a:hover {
	background-color:#000066; 	/*リンクにマウスが乗ったら背景色を変更する*/
	background-image:url(images/bg_menu2.png); 	/*リンクにマウスが乗ったら背景画像を変更する*/
}

